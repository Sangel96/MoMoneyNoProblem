<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/white_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_white_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/white_rect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_white_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white_rect" />

    <ImageView
        android:id="@+id/white_rect3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_white_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white_rect2" />

    <ImageView
        android:id="@+id/white_rect4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_white_rect"
        app:layout_constraintStart_toStartOf="@+id/white_rect3"
        app:layout_constraintTop_toBottomOf="@+id/white_rect3" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="6dp"
        android:background="@null"
        android:hint="Full Name"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/white_rect"
        app:layout_constraintStart_toStartOf="@+id/white_rect" />


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/white_rect2"
        app:layout_constraintTop_toTopOf="@+id/white_rect2" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/white_rect3"
        app:layout_constraintTop_toTopOf="@+id/white_rect3" />

    <EditText
        android:id="@+id/etRePassword"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:background="@null"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/white_rect4"
        app:layout_constraintTop_toTopOf="@+id/white_rect4" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/ic_sign_up_rect"
        app:layout_constraintEnd_toEndOf="@+id/white_rect4"
        app:layout_constraintTop_toBottomOf="@+id/white_rect4" />

    <ImageView
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_sign_up_text"
        app:layout_constraintEnd_toEndOf="@+id/imageView16"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imageView16" />

    <ImageView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_login_button"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />


</androidx.constraintlayout.widget.ConstraintLayout>