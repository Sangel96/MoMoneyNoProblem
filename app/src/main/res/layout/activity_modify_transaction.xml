<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:ignore="ExtraText">
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/modify_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/Modify_Transaction"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transactionType"
            android:layout_width="148dp"
            android:layout_height="39dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:text="@string/transaction_type_income_expenses"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/transactionTypeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtSourcetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="10dp"
            android:text="@string/source_type"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/transactionSourceTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="50dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="280dp"
            android:text="@string/store_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/StoreNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="50dp"
            android:ems="10" />


        <Button
            android:id="@+id/modify_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="540dp"
            android:text="@string/modify" />

        <TextView
            android:id="@+id/txtnew_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="420dp"
            android:text="@string/new_amount"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/newAmountEditText"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="405dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="340dp"
            android:text="Amount($)"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="number"/>


        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="170dp"
            android:text="@string/receipt_date"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="date" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="390dp"
            android:background="#3F51B5" />

        <TextView
            android:id="@+id/txtNewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="480dp"
            android:text="@string/receipt_newdate"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            android:layout_marginTop="465dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="date" />


    </RelativeLayout>

</RelativeLayout>

