<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SubAccountName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubAccount.CreateSubAccounts">


    <ImageView
        android:id="@+id/selectsubaccountitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/ic_manage_sub_account_text"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


    <ImageView
        android:id="@+id/enterbuttonmanagesubaccount"
        android:layout_width="349dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:src="@drawable/ic_enter_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/enterbuttontextmanagesubaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_marginBottom="86dp"
        android:src="@drawable/ic_enter_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SubAccountSpinner">

    </ImageView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:text="Please Select a Sub Account from the List"
        app:layout_constraintBottom_toTopOf="@+id/SubAccountSpinner"
        app:layout_constraintEnd_toEndOf="@+id/SubAccountSpinner"
        app:layout_constraintStart_toStartOf="@+id/enterbuttonmanagesubaccount"
        app:layout_constraintTop_toBottomOf="@+id/selectsubaccountitle"></TextView>

    <Spinner
        android:id="@+id/SubAccountSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="255dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/enterbuttontextmanagesubaccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>